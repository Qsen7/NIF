@{
    ViewData["Title"] = "Home Page";
}

@model ICollection<Cat>
<h1>Fluffy Duffy Munchin Cats</h1>
<ul>
    @foreach (var cat in Model)
    {
        <li>
            <a asp-action="Details" asp-controller="Cats" asp-route-id="@cat.ID">@cat.Name</a>
        </li>
    }
</ul>
<button><a asp-action="Add" asp-controller="Cats">Add cat</a></button>